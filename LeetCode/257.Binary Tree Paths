257. Binary Tree Paths

/*
Given a binary tree, return all root-to-leaf paths.

For example, given the following binary tree:

   1
 /   \
2     3
 \
  5
All root-to-leaf paths are:

["1->2->5", "1->3"]
*/

Solution:
/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    void travel(TreeNode *root,string path,vector<string>&res){
        stringstream ss;
        ss<<root->val;
        string v=ss.str();
        if(root->left==NULL&&root->right==NULL)
           res.push_back(path+v);
        if(root->left)
            travel(root->left,path+v+"->",res);
        if(root->right)
            travel(root->right,path+v+"->",res);
    }
    vector<string> binaryTreePaths(TreeNode* root) {
        vector<string> res;
        if(root)
            travel(root,"",res);
        return res;
    }
};

改写
/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    vector<string> binaryTreePaths(TreeNode* root) {
        if(root==NULL)
            return {};
        vector<string> res;
        helper(res,"",root);
        return res;
    }
private:
    void helper(vector<string>&res,string path,TreeNode*root){
        // 已经到叶节点
        if(!root->left&&!root->right){
            path+=to_string(root->val);
            res.push_back(path);
            return;
        }
        path+=to_string(root->val)+"->";
        if(root->left)
            helper(res,path,root->left);
        if(root->right)
            helper(res,path,root->right);
    }
};
