50. Pow(x, n)
/*
Implement pow(x, n).

Example 1:
  Input: 2.00000, 10
  Output: 1024.00000
Example 2:
  Input: 2.10000, 3
  Output: 9.26100
*/
Solution:
class Solution {
public:
    //注意 n=INT_MIN时 -n不是INT_MAX
    //INT_MIN=-2147483648,INT_MAX=2147483647
    double myPow(double x, int n) {
        if(n==0) return 1;
        long nn=n;
        if(n<0) {
            nn = -nn;
            x = 1/x;
        }
        double ans = 1;
        while(nn>0){
            if(nn&1) ans *= x;
            x *= x;
            nn >>= 1;
        }
        return ans;
    }
};
