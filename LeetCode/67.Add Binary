67. Add Binary

/*
Given two binary strings, return their sum (also a binary string).

For example,
a = "11"
b = "1"
Return "100".
*/

Solution:

class Solution {
public:
    string addBinary(string a, string b) {
        int lena=a.length();
        int lenb=b.length();
        int i=lena-1,j=lenb-1;
        string x="";
        int cnt=0,sum;//进位 以及该位和
        char c;
        while(i>=0&&j>=0){
            sum=a[i]-'0'+b[j]-'0'+cnt;
            c=(sum%2)+'0';
            x=c+x;
            cnt=sum/2;
            i--;j--;
        }
        while(i>=0){
            sum=a[i]-'0'+cnt;
            c=(sum%2)+'0';
            x=c+x;
            cnt=sum/2;
            i--;
        }
        while(j>=0){
            sum=b[j]-'0'+cnt;
            c=(sum%2)+'0';
            x=c+x;
            cnt=sum/2;
            j--;
        }
        if(cnt>0){
            c=cnt+'0';
            x=c+x;
            cnt=0;
        }
        return x;
        
    }
};
