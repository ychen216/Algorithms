438. Find All Anagrams in a String
/*
Given a string s and a non-empty string p, find all the start indices of p's anagrams in s.

Strings consists of lowercase English letters only and the length of both strings s and p will not be larger than 20,100.

The order of output does not matter.

Example 1:

Input:
s: "cbaebabacd" p: "abc"

Output:
[0, 6]

Explanation:
The substring with start index = 0 is "cba", which is an anagram of "abc".
The substring with start index = 6 is "bac", which is an anagram of "abc".
Example 2:

Input:
s: "abab" p: "ab"

Output:
[0, 1, 2]

Explanation:
The substring with start index = 0 is "ab", which is an anagram of "ab".
The substring with start index = 1 is "ba", which is an anagram of "ab".
The substring with start index = 2 is "ab", which is an anagram of "ab".
*/

Solution:
class Solution {
public:
    //只要子串中各字母出现的次数和 p中各字母出现的次数一样 就是一个anagram
    vector<int> findAnagrams(string s, string p) {
        int lens=s.length(),lenp=p.length();
        int ms[26]={0},mp[26];
        for(int i=0;i<lenp;i++)
            ms[p[i]-'a']++;
        vector<int> res;
        for(int i=0;i<=lens-lenp;i++){
            for(int k=0;k<26;k++)
                mp[k]=0;
            for(int j=0;j<lenp;j++){
                mp[s[i+j]-'a']++;
            }
            bool flag=true;
            for(int k=0;k<26;k++)
                if(ms[k]!=mp[k]){
                    flag=false;
                    break;
                }
            if(flag)
                res.push_back(i);
        }
        return res;
    }
};

Solution 2：
class Solution {
public:
    // 只要s与pattern中每个字符出现的次数相同 就是一个Anagram
    vector<int> findAnagrams(string s, string p) {
        int lens=s.length(),lenp=p.length();
        if(lens<lenp)
            return {};
        unordered_map<char,int> patternMap,curMap;
        vector<int> res;
        for(auto&c:p)
            patternMap[c]++;
        // 滑动窗口
        for(int i=0;i+lenp<=lens;i++){
            if(i==0){
                // 统计第一个区间不同字符出现的次数
                for(int k=i;k<i+lenp;k++)
                    curMap[s[k]]++;
            }
            else{
                // 减去上一个区间的首字符 加上新区间的新字符
                curMap[s[i-1]]--;
                curMap[s[i+lenp-1]]++;
            }
            // 稍微做一个小剪枝 候选区间最后一个字符不在pattern中必然不符合条件
            if(patternMap.find(s[i+lenp-1])!=patternMap.end()){
                bool ok=true;
                for(auto &m:patternMap)
                    if(m.second!=curMap[m.first]){
                        ok=false;
                        break;
                    }
                if(ok)
                    res.push_back(i);
            }
        }
        return res;
    }
};
