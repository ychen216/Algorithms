83.Remove Duplicates from Sorted List

/*
Given a sorted linked list, delete all duplicates such that each element appear only once.

For example,
  Given 1->1->2, return 1->2.
  Given 1->1->2->3->3, return 1->2->3.
*/

Solution 1:
/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        if(head){
            int preVal=head->val;
            ListNode *pre=head;
            ListNode *cur=head->next;
            while(cur){
                if(cur->val==preVal)
                    pre->next=cur->next;
                else{
                    preVal=cur->val;
                    pre=cur;
                }
                cur=cur->next;
            }
        }
        return head;
    }
};


Solution 2:
/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        if(head){
            ListNode *pre=NULL;
            ListNode *cur=head;
            while(cur){
                if(pre!=NULL&&pre->val==cur->val){
                    pre->next=cur->next;
                }
                else{
                    pre=cur;
                }
                cur=cur->next;
            }
        }
        return head;
    }
};
